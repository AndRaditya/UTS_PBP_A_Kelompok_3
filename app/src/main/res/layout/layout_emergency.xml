<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="36dp"
            android:src="@drawable/warning"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hubungi Kami"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-500-911"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rumah Sakit Terdekat"
        android:layout_marginTop="24dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siloam Hospital Yogyakarta"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jl. Laksda Adisucipto No.32-34,"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Yogyakarta 55221"
                android:layout_marginTop="4dp"
                android:textSize="14dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Lokasi"
            android:id="@+id/btnLokasiEmergency"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="24dp"
            android:backgroundTint="#2F80ED"/>

    </LinearLayout>

</LinearLayout>


